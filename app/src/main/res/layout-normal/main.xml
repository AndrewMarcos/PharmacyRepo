<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:padding="10sp"
    android:weightSum="5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"></LinearLayout>

    <Button
        android:id="@+id/imageView_News"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:layout_weight="1"
        android:src="@drawable/news"
        android:text="اخبار"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="0.2"></LinearLayout>

    <Button
        android:id="@+id/imageView_deleviry"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center"
        android:layout_margin="15sp"
        android:layout_weight="1"
        android:src="@drawable/delivery"

        android:text="ارسل روشته"
        android:textSize="40sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"></LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:id="@+id/imageView_facebook"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:layout_weight="1"

            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView_map"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:layout_weight="1"

            android:src="@drawable/map" />

        <ImageView
            android:id="@+id/imageView_call"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_margin="15sp"
            android:layout_weight="1"

            android:src="@drawable/call" />
    </LinearLayout>


</LinearLayout>