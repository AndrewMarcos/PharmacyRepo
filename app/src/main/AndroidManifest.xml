<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="romance.pharmacy.andrew_marcos.pharmacyrepo" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".News"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MedicalList"
            android:parentActivityName=".Medical_Data_Deliveries" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Medical_Data_Deliveries" />
        </activity>

        <activity
            android:name=".Medical_Data_Deliveries"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity android:name=".News_details"
            android:parentActivityName=".News">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".News" />
        </activity>

        <service
            android:name=".Services.myAppNotificationService"
            android:exported="false"/>
    </application>

</manifest>
